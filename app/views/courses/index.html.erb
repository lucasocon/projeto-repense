<div class="margtop">
  <p id="notice"><%= notice %></p>

  <h1>All Courses</h1>

  <table class="table table-responsive">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.name %></td>
          <td><%= course.description %></td>
          <td><%= course.status %></td>
          <td><%= link_to 'Show', course, class: 'btn btn-primary' %></td>
          <td><%= link_to 'Edit', edit_course_path(course), class: 'btn btn-primary' %></td>
          <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Course', new_course_path, class: 'btn btn-primary' %>

</div>
