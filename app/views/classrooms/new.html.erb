<div class="margtop">
  <%= simple_form_for(@classroom) do |f| %>
    <% if @classroom.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@classroom.errors.count, "error") %> prohibited this classroom from being saved:</h2>

        <ul>
        <% @classroom.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col-xs-6">
        <div class="form-group">
          <%= f.association :student, collection: @students %>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="form-group">
          <%= f.association :course, collection: @courses %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.input :entry_at, as: :datetime %>
    </div>

    <div class="actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
